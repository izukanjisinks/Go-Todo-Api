							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"title\": \"Updated Todo\",\n  \"description\": \"Updated description\",\n  \"priority\": \"medium\",\n  \"completed\": true\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/todos/:todoId",
							"host": ["{{baseUrl}}"],
							"path": ["todos", ":todoId"],
							"variable": [
								{
									"key": "todoId",
									"value": "1"
								}
							]
						}
					}
				},
				{
					"name": "Delete Todo",
					"request": {
						"method": "DELETE",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{authToken}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/todos/:todoId",
							"host": ["{{baseUrl}}"],
							"path": ["todos", ":todoId"],
							"variable": [
								{
									"key": "todoId",
									"value": "1"
								}
							]
						}
					}
				}
			]
		},
